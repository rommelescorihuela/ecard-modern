<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On
    
    # ----------------------------------------------------------------------
    # SUBDOMAIN ROUTING FOR TENANTS
    # ----------------------------------------------------------------------
    # If the host is NOT www.domain.com AND NOT domain.com or localhost
    RewriteCond %{HTTP_HOST} !^www\. [NC]
    RewriteCond %{HTTP_HOST} !^ecard-modern\.test$ [NC]
    RewriteCond %{HTTP_HOST} !^localhost$ [NC]
    
    # Extract the subdomain (assumes subdomain.domain.com)
    RewriteCond %{HTTP_HOST} ^([^\.]+)\. [NC]
    
    # Check if the static site folder exists for this subdomain
    RewriteCond %{DOCUMENT_ROOT}/sites/%1/index.html -f
    
    # Serve the static file
    RewriteRule ^/?$ /sites/%1/index.html [L]
    
    # If requesting a specific file/asset for the tenant
    RewriteCond %{HTTP_HOST} ^([^\.]+)\. [NC]
    RewriteCond %{DOCUMENT_ROOT}/sites/%1%{REQUEST_URI} -f
    RewriteRule ^(.*)$ /sites/%1/$1 [L]
    
    # ----------------------------------------------------------------------
    # LARAVEL DEFAULT ROUTING
    # ----------------------------------------------------------------------
    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
