---
import TenantLayout from '../layouts/TenantLayout.astro';

// Example theme configuration (would come from JSON in production)
const demoTheme = {
    primary: '#6366f1',
    secondary: '#ec4899',
    background: '#f8fafc',
    text: '#1e293b',
    headingFont: 'sans-serif',
    bodyFont: 'sans-serif'
};
---

<TenantLayout title="EcardModern Setup" theme={demoTheme}>
	<main class="min-h-screen flex flex-col items-center justify-center p-4">
		<h1 class="text-4xl font-bold text-primary mb-4">EcardModern Frontend</h1>
		<p class="text-lg mb-8 text-center max-w-xl">
            Frontend generator configured successfully with <span class="text-secondary font-bold">Astro 4.0</span> + <span class="font-bold">Tailwind CSS</span>.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 w-full max-w-2xl">
            <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-primary">
                <h2 class="text-xl font-bold mb-2">Dynamic Theming</h2>
                <p>Colors and fonts are controlled via CSS variables injected at runtime.</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-secondary">
                <h2 class="text-xl font-bold mb-2">Static Generation</h2>
                <p>Ready to generate optimized static sites for each tenant.</p>
            </div>
        </div>
	</main>
</TenantLayout>
